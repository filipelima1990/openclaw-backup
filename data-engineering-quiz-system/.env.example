# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# OpenAI API (for LLM question generation)
OPENAI_API_KEY=your_openai_api_key_here

# Prefect Configuration
PREFECT_API_URL=http://localhost:4200
PREFECT_API_KEY=  # Leave empty if using self-hosted without auth
PREFECT_WORK_QUEUE=quiz-work-queue

# Database Configuration
DATABASE_URL=postgresql://quiz_user:quiz_password@localhost:5432/quiz_db
POSTGRES_USER=quiz_user
POSTGRES_PASSWORD=quiz_password
POSTGRES_DB=quiz_db

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# Webhook Configuration
WEBHOOK_URL=https://your-domain.com
WEBHOOK_PORT=8080

# Quiz Configuration
DEFAULT_DIFFICULTY=2  # 1=Beginner, 2=Intermediate, 3=Advanced, 4=Expert
QUIZ_SCHEDULE_TIME=10:00  # UTC time for daily quiz
QUIZ_TIMEZONE=UTC

# Correct Threshold for Difficulty Promotion
CORRECT_THRESHOLD_FOR_PROMOTION=3  # Consecutive correct answers needed

# Quiz Topics (comma-separated, leave empty for all topics)
# Available: data_modeling, sql_performance, distributed_systems, streaming,
#            data_warehouse_lakehouse, etl_vs_elt, orchestration, data_quality, observability
PREFERRED_TOPICS=

# Application Mode: production, development, test
QUIZ_MODE=development

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # or text
